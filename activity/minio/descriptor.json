{
  "name": "codelity-minio-activity",
  "type": "flogo:activity",
  "version": "0.2.0",
  "title": "Codelity MinIO Activity",
  "description": "Codelity MinIO Activity",
  "homepage": "https://github.com/codelity-co/codelity-flogo-plugins/activity/minio",
  "settings": [
    {
      "name": "endpoint",
      "type": "string",
      "required": true
    },
    {
      "name": "accessKey",
      "type": "string",
      "required": true
    },
    {
      "name": "secretKey", 
      "type": "string",
      "required": true
    },
    {
      "name": "enableSsl",
      "type": "boolean",
      "default": false
    },
    {
      "name": "bucketName",
      "type": "string",
      "required": true
    },
    {
      "name": "region",
      "type": "string"
    },
    {
      "name": "method",
      "type": "string",
      "enum": [
        "PutObject"
      ]
    },
    {
      "name": "methodOptions",
      "type": "object"
    },
    {
      "name": "dataType",
      "type": "string",
      "enum": ["string", "binary"]
    }
  ],
  "input": [
    {
      "name": "objectName",
      "type": "string",
      "required": true
    },
    {
      "name": "data",
      "type": "any"
    }
  ],
  "output": [
    {
      "name": "status",
      "type": "string",
      "required": true
    },
    {
      "name": "result",
      "type": "object"
    }
  ]
}
